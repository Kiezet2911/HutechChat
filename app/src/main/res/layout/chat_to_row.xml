<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/textviewfrom_chat_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text=" tin nhan tin nhantin nhan tin nhan v"
        android:textColor="?attr/TextColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/Txt_time_To"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toEndOf="@+id/imageViewchat_to_row"
        app:layout_constraintTop_toTopOf="@+id/imageViewchat_to_row" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewchat_to_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/Txt_time_To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="TextView"
        android:textColor="?attr/TextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/GuiAnhTo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/Txt_time_To"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toEndOf="@+id/imageViewchat_to_row"
        app:layout_constraintTop_toTopOf="@+id/imageViewchat_to_row"
        app:srcCompat="@drawable/ic_image_black" />

</androidx.constraintlayout.widget.ConstraintLayout>