<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant"
    tools:context=".messages.ChatLogActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_chat_log"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_below="@+id/recyclerview_chat_log"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/emoji"
            android:background="@drawable/edit_background"
            android:ems="10"
            android:hint="Nhắn tin"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/gui_button_chat_log"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@+id/recyclerview_chat_log"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/editText_chat_log"
            android:src="@drawable/ic_baseline_send_24"
            android:text="Gửi" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_chat_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/colorSecondaryVariant"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:id="@+id/BtnGuiAnh"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@+id/recyclerview_chat_log"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerview_chat_log"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_image_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/GIF"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@+id/recyclerview_chat_log"
            android:layout_toRightOf="@+id/BtnGuiAnh"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSecondaryVariant"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_gif_24" />

        <ImageView
            android:id="@+id/emoji"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@+id/recyclerview_chat_log"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/GIF"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_insert_emoticon_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnToBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:contentDescription="down"
            android:src="@drawable/ic_baseline_down_24"
            app:fabSize="normal" />
    </RelativeLayout>
</ScrollView>